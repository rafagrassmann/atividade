#include <stdio.h>

double potencia(double x, int n) {
    if (n == 0) {
        return 1.0;
    }
    return x * potencia(x, n - 1);
}

int main() {
    double x = 2.0;
    int n = 3;
    
    double resultado = potencia(x, n);
    printf("%.2f elevado a %d = %.2f\n", x, n, resultado);
    
    return 0;
}

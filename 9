#include <stdio.h>

// Função recursiva para calcular o MDC
int mdc(int a, int b) {
    // Caso base: se b for 0, o MDC é a
    if (b == 0) {
        return a;
    }
    
    // Chamada recursiva: MDC(a,b) = MDC(b, a mod b)
    return mdc(b, a % b);
}

int main() {
    int num1, num2;
    
    // Solicita entrada do usuário
    printf("Digite dois números inteiros positivos:\n");
    printf("Número 1: ");
    scanf("%d", &num1);
    printf("Número 2: ");
    scanf("%d", &num2);
    
    // Verifica se os números são positivos
    if (num1 <= 0 || num2 <= 0) {
        printf("Por favor, digite apenas números positivos!\n");
    } else {
        // Calcula e exibe o MDC
        int resultado = mdc(num1, num2);
        printf("O MDC de %d e %d é %d\n", num1, num2, resultado);
    }
    
    return 0;
}
